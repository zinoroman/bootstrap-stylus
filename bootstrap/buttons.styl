//
// Buttons
// --------------------------------------------------


// Base styles
// --------------------------------------------------

.btn
  display inline-block
  margin-bottom 0 // For input.btn
  font-weight $btn-font-weight
  text-align center
  vertical-align middle
  touch-action manipulation
  cursor pointer
  background-image none // Reset unusual Firefox-on-Android default style see https://github.com/necolas/normalize.css/issues/214
  white-space nowrap
  text-decoration none
  button-size($btn-height-base, $padding-base-horizontal, $font-size-base, $control-bdw-base, $btn-border-radius-base)
  user-select none

  &:hover,
  &:focus,
  &.focus
    color $btn-default-color
    text-decoration none

  &:active,
  &.active
    outline 0
    background-image none

  &.disabled,
  &[disabled],
  fieldset[disabled] &
    cursor $cursor-disabled
    opacity-ie(.65)

  a&
    &.disabled,
    fieldset[disabled] &
      pointer-events none // Future-proof disabling of clicks on `<a>` elements

// Button that contains only icon
// --------------------------------------------------

.btn-icon
  min-width $btn-height-base

  &,
  &.btn-lg,
  &.btn-sm,
  &.btn-xs
    padding-left 0
    padding-right @padding-left

  &.btn-lg
    min-width $btn-height-large

  &.btn-sm
    min-width $btn-height-small

  &.btn-xs
    min-width $btn-height-xs


// Link buttons
// -------------------------

// Make a button look and behave like a link
.btn-link
  color $link-color
  font-weight normal
  border-radius 0

  &,
  &:active,
  &.active,
  &[disabled],
  fieldset[disabled] &
    background-color transparent

  &,
  &:hover,
  &:focus,
  &:active
    border-color transparent

  &:hover,
  &:focus
    color $link-hover-color
    text-decoration $link-hover-decoration
    background-color transparent

  &[disabled],
  fieldset[disabled] &
    &:hover,
    &:focus
      color $btn-link-disabled-color
      text-decoration none


// Button Sizes
// --------------------------------------------------

.btn-lg
  // line-height ensure even-numbered height of button next to large input
  button-size($btn-height-large, $padding-large-horizontal, $control-fs-large, $control-bdw-large, $btn-border-radius-base)

.btn-sm
  // line-height ensure proper height of button next to small input
  button-size($btn-height-small, $padding-small-horizontal, $control-fs-small, $control-bdw-small, $btn-border-radius-base)

.btn-xs
  button-size($btn-height-xs, $padding-xs-horizontal, $control-fs-xs, $control-bdw-xs, $btn-border-radius-base)

.btn-wide
  padding-left ($padding-base-horizontal * $btn-wide-multiplier)
  padding-right @padding-left

  &.btn-lg
    padding-left ($padding-large-horizontal * $btn-wide-multiplier)
    padding-right @padding-left

  &.btn-sm
    padding-left ($padding-small-horizontal * $btn-wide-multiplier)
    padding-right @padding-left

  &.btn-xs
    padding-left ($padding-xs-horizontal * $btn-wide-multiplier)
    padding-right @padding-left

.btn-condensed
  padding-left ($padding-base-horizontal / $btn-condensed-divider)
  padding-right @padding-left

  &.btn-lg
    padding-left ($padding-large-horizontal / $btn-condensed-divider)
    padding-right @padding-left

  &.btn-sm
    padding-left ($padding-small-horizontal / $btn-condensed-divider)
    padding-right @padding-left

  &.btn-xs
    padding-left ($padding-xs-horizontal / $btn-condensed-divider)
    padding-right @padding-left



// Block button
// --------------------------------------------------

.btn-block
  display block
  width 100%

// Vertically space out multiple block buttons
.btn-block + .btn-block
  margin-top 5px

// Specificity overrides
input[type="submit"],
input[type="reset"],
input[type="button"]
  &.btn-block
    width 100%

// Button variants
//
// Easily pump out default styles, as well as :hover, :focus, :active,
// and disabled options for all buttons
button-variant(
  $color, $background, $border, 
  $hover-color, $hover-background, $hover-border, 
  $active-color, $active-background, $active-border
)
  color $color
  background-color $background
  border-color $border
  
  .icon--svg
    fill $color

  &:focus,
  &.focus,
  &:hover
    color $hover-color
    background-color $hover-background
    border-color $hover-border
    
    .icon--svg
      fill $hover-color

  &:active,
  &.active
    color $active-color
    background-color $active-background
    border-color $active-border
    
    .icon--svg
      fill $active-color

  .open > .dropdown-toggle&
    color $active-color
    background-color $active-background
    border-color $active-border

    &:hover,
    &:focus,
    &.focus
      color $hover-color
      background-color $hover-background
      border-color $hover-border
      
      .icon--svg
        fill $hover-color

  &:active,
  &.active,
  .open > .dropdown-toggle&
    background-image none

  &.disabled,
  &[disabled],
  fieldset[disabled] &
    &:hover,
    &:focus,
    &.focus
      color $color
      background-color $background
      border-color $border

  .badge
    color $background
    background-color $color

// Button sizes
button-size($height, $padding-horizontal, $font-size, $border-width, $border-radius)
  height $height
  padding 0 $padding-horizontal
  font-size $font-size
  line-height @height - $border-width * 2
  border-radius $border-radius
